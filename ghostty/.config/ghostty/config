## Basic Options
shell-integration = zsh
font-family = Hack
theme = GruvboxDark
mouse-hide-while-typing = true
scrollback-limit = 1000000

## General Options 
# Misc
keybind = super+r=reload_config

window-save-state = always

window-decoration = none
gtk-tabs-location = hidden

## Keybinds
# Unbinding
keybind = ctrl+enter=unbind
keybind = ctrl+tab=unbind

# Misc
keybind = ctrl+/>q=close_surface

keybind = ctrl+/>t=toggle_quick_terminal

keybind = ctrl+/>d=toggle_window_decorations
keybind = ctrl+/>o=toggle_tab_overview

# Panes
keybind = ctrl+/>h=goto_split:left
keybind = ctrl+/>j=goto_split:bottom
keybind = ctrl+/>k=goto_split:top
keybind = ctrl+/>l=goto_split:right

keybind = ctrl+/>v=new_split:right
keybind = ctrl+/>s=new_split:down

keybind = ctrl+/>f=toggle_split_zoom

keybind = ctrl+/>equal=equalize_splits

# Tabs
keybind = ctrl+/>n=new_tab

keybind = ctrl+/>1=goto_tab:1
keybind = ctrl+/>2=goto_tab:2
keybind = ctrl+/>3=goto_tab:3
keybind = ctrl+/>4=goto_tab:4
keybind = ctrl+/>5=goto_tab:5
keybind = ctrl+/>6=goto_tab:6
keybind = ctrl+/>7=goto_tab:7
keybind = ctrl+/>8=goto_tab:8
keybind = ctrl+/>9=goto_tab:9

# Scrolling
# keybind = ctrl+up=scroll_page_up
# keybind = ctrl+down=scroll_page_down
keybind = ctrl+up=scroll_page_fractional:-0.5
keybind = ctrl+down=scroll_page_fractional:0.5
